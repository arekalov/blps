spring:
  application:
    name: blps
  datasource:
    url: ${DB_URL:jdbc:postgresql://localhost:5432/blps}
    username: ${DB_USERNAME:postgres}
    password: ${DB_PASSWORD:postgres}
    driver-class-name: org.postgresql.Driver
  jpa:
    hibernate:
      ddl-auto: update
    show-sql: false
    properties:
      hibernate:
        format_sql: true
        dialect: org.hibernate.dialect.PostgreSQLDialect
  
jwt:
  secret: ${JWT_SECRET:change-me-in-production}
  expiration: 86400000

springdoc:
  api-docs:
    path: /v3/api-docs
  swagger-ui:
    enabled: false
  paths-to-match: /api/v1/**
